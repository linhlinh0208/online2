@{
    @* 23DH111859_DinhThiTrucLinh *@
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style type="text/css">
    body {
        background-image: url('../../content/screenshot 2024-10-31 144215.png');
        background-size: cover;
        font-size: 16px;
        font-family: Lato, sans-serif;
        width: 1180px;
        margin: 0 auto;
    }

    section {
        text-align: center; /*//căn giữa*/
        display: flex; /*//dàn  ngang*/
    }

    article {
        background-color: darkslategray;
        margin: 80px 20px 20px; /*top right left*/
        border: 5px solid gray;
        color: lightgray;
    }

        article > h1 {
            font-size: 1.5em;
            color: white;
        }

    .price {
        font-size: 3em;
        font-weight: bold;
        color: lightseagreen;
    }

    ul {
        padding: 0;
        list-style: none;
    }

    li {
        color: darkgray;
    }

    button {
        background-color: lightseagreen;
        color: #fff;
        padding: 15px 30px; /*khoảng cách giữa nội dung nút và viền của nút. */
        margin: 10px 0;
        font-size: 0.9em; /* kích thước font chữ*/
        cursor: pointer; /*Thay đổi hình dạng con trỏ chuột khi di chuột qua nút.*/
        border: none;
    }

        button:hover {
            background-color: green;
        }

    li {
        padding: 5px 0;
    }
</style>


